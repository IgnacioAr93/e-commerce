<div class="row">
  <div class="col-md-3 center-block no-float">
    <h2><i class="fa fa-user-circle-o" aria-hidden="true"></i>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :Correo %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :ContraseÃ±a %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres minimos)</em>
          <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar ContraseÃ±a" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", class: "btn btn-info" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


