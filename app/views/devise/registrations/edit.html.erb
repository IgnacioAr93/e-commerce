<div class="row">
  <div class="col-md-3 center-block no-float">
      <h2><i class="fa fa-user-circle" aria-hidden="true"></i>Editar Datos </h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :Correo %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :Contraseña %> <i>(Deja este campo en blanco si no la quieres cambiar)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> Caracteres minimos</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmar Contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, "Contraseña Actual" %> <i>(La necesitamos para actualizar tu informacion)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Actualizar", class: "btn btn-info"%>
          </div>
        <% end %>

        <h3>Eliminar cuenta</h3>

        <p><%= button_to "Eliminar", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-info" %></p>

        <%= link_to "Volver", :back %>
  </div>
</div>

