<h1>Todas Nuestras Categorias</h1>

<% @categories.each do |category| %>
  <div class="pb-left-column col-xs-12 col-sm-12 col-md-4"">
    <div class="row">
      <div class="col-sm-6 col-sm-12">
        <h2><%= category.title %></h2>
      </div>
      <div class="col-sm-6">
        <%= link_to 'Edit', edit_category_path(category), class: "btn btn-success"  %>
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
        <%= link_to 'Show', category, class: "btn btn-warning"  %>
      </div>
    </div>
  </div>
<% end %>

<div class="col-sm-6 col-sm-12">
<br><br>
<%= link_to 'New Category', new_category_path, class: "btn btn-info" %>
</div>
















