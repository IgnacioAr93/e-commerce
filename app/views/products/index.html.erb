<h1>Todos Nuestros Productos</h1>

<% @products.each do |product| %>
  <div class="pb-left-column col-xs-12 col-sm-12 col-md-4"">
    <div class="row">
      <div class="col-sm-6 col-sm-12">
        <h2><%= product.title %></h2>
      </div>
      <div class="col-sm-6">
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-success"  %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
        <%= link_to 'Show', product, class: "btn btn-warning"  %>
      </div>
    </div>
  </div>
<% end %>

<div class="col-sm-6 col-sm-12">
<br><br>
<%= link_to 'New Product', new_product_path, class: "btn btn-info" %>
</div>






















